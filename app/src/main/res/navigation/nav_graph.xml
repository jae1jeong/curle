<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.james.curly.presentation.home.HomeFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/second_fragment" />
        <action
            android:id="@+id/action_FirstFragment_to_productDescFragment"
            app:destination="@id/productDescFragment" />
        <action
            android:id="@+id/action_home_fragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/second_fragment"
        android:name="com.james.curly.presentation.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/home_fragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.james.curly.presentation.cart.CartFragment"
        android:label="CartFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.james.curly.presentation.login.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        android:id="@+id/productDescFragment"
        android:name="com.james.curly.presentation.product_desc.ProductDescFragment"
        android:label="ProductDescFragment" />
</navigation>